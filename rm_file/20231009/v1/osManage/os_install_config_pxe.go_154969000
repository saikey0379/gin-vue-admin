// FindConfigPxe 用id查询PXE配置
// @Tags ConfigPxe
// @Summary 用id查询PXE配置
// @Security ApiKeyAuth
// @accept application/json
// @Produce application/json
// @Param data query osManage.ConfigPxe true "用id查询PXE配置"
// @Success 200 {string} string "{"success":true,"data":{},"msg":"查询成功"}"
// @Router /pxe/findConfigPxe [get]
func (pxeApi *ConfigPxeApi) FindConfigPxe(c *gin.Context) {
	var pxe osManage.ConfigPxe
	err := c.ShouldBindQuery(&pxe)
	if err != nil {
		response.FailWithMessage(err.Error(), c)
		return
	}
	if repxe, err := pxeService.GetConfigPxe(pxe.ID); err != nil {
        global.GVA_LOG.Error("查询失败!", zap.Error(err))
		response.FailWithMessage("查询失败", c)
	} else {
		response.OkWithData(gin.H{"repxe": repxe}, c)
	}
}

// GetConfigPxeList 分页获取PXE配置列表
// @Tags ConfigPxe
// @Summary 分页获取PXE配置列表
// @Security ApiKeyAuth
// @accept application/json
// @Produce application/json
// @Param data query osManageReq.ConfigPxeSearch true "分页获取PXE配置列表"
// @Success 200 {string} string "{"success":true,"data":{},"msg":"获取成功"}"
// @Router /pxe/getConfigPxeList [get]
func (pxeApi *ConfigPxeApi) GetConfigPxeList(c *gin.Context) {
	var pageInfo osManageReq.ConfigPxeSearch
	err := c.ShouldBindQuery(&pageInfo)
	if err != nil {
		response.FailWithMessage(err.Error(), c)
		return
	}
	if list, total, err := pxeService.GetConfigPxeInfoList(pageInfo); err != nil {
	    global.GVA_LOG.Error("获取失败!", zap.Error(err))
        response.FailWithMessage("获取失败", c)
    } else {
        response.OkWithDetailed(response.PageResult{
            List:     list,
            Total:    total,
            Page:     pageInfo.Page,
            PageSize: pageInfo.PageSize,
        }, "获取成功", c)
    }
}
